<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiracleLandCrossPlatform.AdminNewProduct"
             Title="AdminNewProduct">
    <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
        <Image  x:Name="ProductImage" HeightRequest="200" Aspect="AspectFit" />
        <Label Text="Product Name" />
        <Entry  x:Name="ProductName" WidthRequest="400" />
        <Label Text="Product Price" />
        <Entry  x:Name="ProductPrice" WidthRequest="400" />
        <Label Text="Product Quantity" />
        <Entry  x:Name="ProductQuantity" WidthRequest="400" />
        <Label Text="Product Info" />
        <Entry  x:Name="ProductInfo" WidthRequest="400" />
        <StackLayout Orientation="Horizontal" Spacing="50">
            <Button
    x:Name="Addproduct"
    Text="Add Product"
    Clicked="Addproduct_Clicked"       
    WidthRequest="150" />

            <Button
    x:Name="Insertimage"
    Text="Insert Image"
    Clicked="Insertimage_Clicked"
    WidthRequest="150" />

        </StackLayout>

    </VerticalStackLayout>
</ContentPage>