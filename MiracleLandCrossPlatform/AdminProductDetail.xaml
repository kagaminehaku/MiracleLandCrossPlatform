<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiracleLandCrossPlatform.AdminProductDetail"
             Title="AdminProductDetail">
    <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
        <Image x:Name="ProductImage" HeightRequest="200" Aspect="AspectFit" />
        <Entry IsEnabled="False" x:Name="ProductName" WidthRequest="400" />
        <Entry IsEnabled="False" x:Name="ProductPrice" WidthRequest="400" />
        <Entry IsEnabled="False" x:Name="ProductQuantity" WidthRequest="400" />
        <Entry IsEnabled="False" x:Name="ProductInfo" WidthRequest="400" />
        <StackLayout Orientation="Horizontal" Spacing="50">

            <Button
    x:Name="EditProduct"
    Text="Edit Product"
    Clicked="EditProduct_Clicked"    
    WidthRequest="150" />
        
        </StackLayout>

    </VerticalStackLayout>
</ContentPage>