<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiracleLandCrossPlatform.CustomerPassword"
             Title="CustomerPassword">
    <VerticalStackLayout Padding="30,0" Spacing="25">
        <Label Text=" " />
    <StackLayout Spacing="50">
        <Label Text="Current Password" />
        <Entry IsPassword="True" x:Name="CurrentPasswordEntry" />

        <Label Text="New Password" />
        <Entry IsPassword="True" x:Name="NewPasswordEntry" />

        <Label Text="Confirm Password" />
        <Entry IsPassword="True" x:Name="ConfirmPasswordEntry" />

        <Button Text="Change Password" Clicked="OnChangePasswordClicked" />
    </StackLayout>
    </VerticalStackLayout>
</ContentPage>
